{{#if updateStoryForm}}
  <h1>Update {{story.headline}} by {{story.author}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=story.author}}
      </div>

      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=story.headline}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=story.image}}
      </div>

      <div class="form-group">
        <label for="story">Story Text</label>
        {{input value=storyText id="storyText" placeholder=story.storyText}}
      </div>

      <button {{action 'update' story}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateStoryForm'}}>Update</button>
{{/if}}
